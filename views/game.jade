extend layout
block scripts
  script(type='text/javascript', src='/js/tictactoe.js')
block infobar
  .widget
    h1 Player 1
    p#player1
      | no player connected <br/> <br/>
      | 
  .widget
    h1 Player 3
    p#player2
      | no player connected <br/> <br/>
block content
  div(id='board')
    table
      tr(id='row1')
        td(id='b1', class='square')
        td(id='b2', class='square v')
        td(id='b3', class='square')
      tr(id='row2')
        td(id='b4', class='square h')
        td(id='b5', class='square v h')
        td(id='b6', class='square h')
      tr(id='row3')
        td(id='b7', class='square')
        td(id='b8', class='square v')
        td(id='b9', class='square')
block lowerbar
  .widget(style="width:400px; margin-top: 20px")
    h1 Game Status
    p#log
      | Waiting for players...
block footer
  a(href='../') &#8656;